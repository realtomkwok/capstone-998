{
	"name": "clara",
	"version": "0.3.0",
	"description": "Clara is a browser extension that helps visually impaired users navigate the web.",
	"private": true,
	"scripts": {
		"watch": "webpack --mode=development --watch --config config/webpack.config.js",
		"build": "webpack --mode=production --config config/webpack.config.js",
		"pack": "node pack.js",
		"repack": "npm run build && npm run pack",
		"format": "prettier --write --ignore-unknown \"{config,public,src}/**/*.{html,css,js,ts,json}\""
	},
	"devDependencies": {
		"@babel/preset-env": "^7.25.4",
		"@types/chrome": "^0.0.270",
		"@types/node": "^22.5.0",
		"@types/react": "^18.3.4",
		"@types/react-dom": "^18.3.0",
		"adm-zip": "^0.5.15",
		"babel-loader": "^9.1.3",
		"copy-webpack-plugin": "^12.0.2",
		"css-loader": "^6.11.0",
		"file-loader": "^6.2.0",
		"mini-css-extract-plugin": "^2.9.0",
		"path-browserify": "^1.0.1",
		"prettier": "^2.8.8",
		"tailwindcss": "^3.4.10",
		"ts-loader": "^9.5.1",
		"ts-node": "^10.9.2",
		"tsconfig-paths-webpack-plugin": "^4.1.0",
		"typescript": "^5.5.4",
		"webpack": "^5.93.0",
		"webpack-cli": "^4.10.0",
		"webpack-merge": "^5.10.0"
	},
	"dependencies": {
		"@babel/preset-react": "^7.24.7",
		"@langchain/community": "^0.2.27",
		"@langchain/openai": "^0.2.6",
		"@mendable/firecrawl-js": "^0.0.13",
		"async_hooks": "^1.0.0",
		"buffer": "^6.0.3",
		"crypto-browserify": "^3.12.0",
		"dotenv": "^16.4.5",
		"dotenv-webpack": "^8.1.0",
		"html-to-text": "^9.0.5",
		"jsdom": "^24.1.1",
		"langchain": "^0.2.16",
		"langsmith": "^0.1.41",
		"mdui": "^2.1.2",
		"node-polyfill-webpack-plugin": "^4.0.0",
		"os-browserify": "^0.3.0",
		"process": "^0.11.10",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"stream-browserify": "^3.0.0",
		"zod": "^3.23.8"
	},
	"types": "node_modules/mdui/jsx.d.ts",
	"web-types": [
		"node_modules/mdui/web-types.en.json"
	]
}
