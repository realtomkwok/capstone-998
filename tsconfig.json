{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"strict": true,
		"jsx": "react",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"types": [
			"mdui/jsx.en",
			"node",
			"jest"
		],
		"baseUrl": "./",
		"paths": {
			"@components/*": [
				"src/components/*"
			],
			"@lib/*": [
				"src/lib/*"
			],
			"mdui/jsx.en": [
				"node_modules/mdui/types/jsx.en.d.ts"
			]
		}
	},
	"include": [
		"src/**/*"
	]
}
